.dialog {
    display: none;
    align-items: center;
    justify-content: center;
    margin: auto;
    overflow: auto;
    max-width: 60%;
    max-height: 95%;
    z-index: $z-index-dialog;

    position: absolute;
    left: 0;
    right: 0;
    top: 50px;
    bottom: 100px;

    .dialog-content {
        margin: auto;
        min-width: 90%;
        min-height: 150px;
    }

    &.open {
        display: flex;
    }
}